{
    "name": "Artpedia_GIT",
    "n_gpu": 1,

    "arch": {
        "type": "get_pretrained_model",
        "args": {
            "name_or_path": "microsoft/git-base"
        }
    },
    "data_loader": {
        "type": "ArtpediaDataLoader",
        "args":{
            "data_dir": "./data/artpedia/",
            "batch_size": 1,
            "split": "train",
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 1,
            "processor": "microsoft/git-base"
        }
    },
    "valid_data_loader": {
        "type": "ArtpediaDataLoader",
        "args":{
            "data_dir": "./data/artpedia/",
            "batch_size": 2,
            "split": "val",
            "shuffle": false,
            "validation_split": 0,
            "num_workers": 1,
            "processor": "microsoft/git-base"
        }
    },
    "test_data_loader": {
        "type": "ArtpediaDataset",
        "args":{
            "root": "./data/artpedia/",
            "split": "val",
            "image_transform": null,
            "processor": null
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 1e-5,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": null,
    "metrics": [
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 50,

        "save_dir": "runs/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
